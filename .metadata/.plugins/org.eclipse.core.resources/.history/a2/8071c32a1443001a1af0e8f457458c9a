			<% 
			if(bbs.getDel() == 0) {
			%>
				<%=arrow(bbs.getDepth()) %>
				<a href="bbsdetail.jsp?seq=<%=bbs.getSeq() %>">	<%=bbs.getTitle() %> </a>
			<%	
