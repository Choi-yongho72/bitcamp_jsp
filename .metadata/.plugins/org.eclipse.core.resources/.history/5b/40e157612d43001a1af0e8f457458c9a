<script type="text/javascript">
	$(window).ready(function () {
		var box = $('#box');
		box.on('click', function () {
			box.css('width', box.innerWidth() + 20 + 'px');
			box.css('height', box.innerHeight() + 20 + 'px');
		});
	});
</script>
